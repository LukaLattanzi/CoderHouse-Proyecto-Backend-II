<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h3 class="text-center mb-0">
                        <i class="bi bi-key"></i> Recuperar Contraseña
                    </h3>
                </div>
                <div class="card-body">
                    <div class="text-center mb-4">
                        <div class="mb-3">
                            <i class="bi bi-envelope-exclamation text-primary" style="font-size: 3rem;"></i>
                        </div>
                        <p class="text-muted">
                            Ingresa tu dirección de email y te enviaremos un enlace para restablecer tu contraseña.
                        </p>
                    </div>

                    {{#if success}}
                    <div class="alert alert-success d-flex align-items-center">
                        <i class="bi bi-check-circle-fill me-2"></i>
                        <div>{{message}}</div>
                    </div>
                    <div class="text-center">
                        <a href="/login" class="btn btn-primary">
                            <i class="bi bi-arrow-left"></i> Volver al Login
                        </a>
                    </div>
                    {{else}}
                    <div id="resetError" class="alert alert-danger d-none"></div>
                    
                    <form id="resetRequestForm">
                        <div class="mb-4">
                            <label for="email" class="form-label">
                                <i class="bi bi-envelope"></i> Dirección de Email
                            </label>
                            <input type="email" 
                                   class="form-control form-control-lg" 
                                   id="email" 
                                   name="email" 
                                   placeholder="tu-email@ejemplo.com"
                                   required>
                            <div class="form-text">Te enviaremos las instrucciones a esta dirección.</div>
                        </div>

                        <button type="submit" class="btn btn-primary w-100 btn-lg" id="resetBtn">
                            <span id="resetSpinner" class="spinner-border spinner-border-sm d-none me-2"></span>
                            <i class="bi bi-send"></i> Enviar Enlace de Recuperación
                        </button>
                    </form>

                    <div class="text-center mt-4">
                        <hr>
                        <div class="d-flex justify-content-center gap-3">
                            <a href="/login" class="text-decoration-none">
                                <i class="bi bi-arrow-left"></i> Volver al Login
                            </a>
                            <span class="text-muted">|</span>
                            <a href="/register" class="text-decoration-none">
                                <i class="bi bi-person-plus"></i> Crear Cuenta
                            </a>
                        </div>
                    </div>
                    {{/if}}

                    {{#if error}}
                    <div class="alert alert-danger d-flex align-items-center mt-3">
                        <i class="bi bi-exclamation-triangle-fill me-2"></i>
                        <div>{{error}}</div>
                    </div>
                    {{/if}}
                </div>
            </div>
            
            <!-- Información adicional -->
            <div class="card mt-3">
                <div class="card-body">
                    <h6 class="card-title">
                        <i class="bi bi-info-circle text-info"></i> ¿Necesitas ayuda?
                    </h6>
                    <small class="text-muted">
                        • Verifica que el email esté escrito correctamente<br>
                        • Revisa tu carpeta de spam si no recibes el correo<br>
                        • El enlace de recuperación expira en 1 hora
                    </small>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    document.getElementById('resetRequestForm')?.addEventListener('submit', async (e) => {
        e.preventDefault();

        const email = document.getElementById('email').value;
        const resetBtn = document.getElementById('resetBtn');
        const resetSpinner = document.getElementById('resetSpinner');
        const resetError = document.getElementById('resetError');

        // Validación básica
        if (!email || !email.includes('@')) {
            resetError.textContent = 'Por favor, ingresa un email válido';
            resetError.classList.remove('d-none');
            return;
        }

        try {
            // Mostrar spinner y deshabilitar botón
            resetSpinner.classList.remove('d-none');
            resetBtn.disabled = true;
            resetError.classList.add('d-none');
            resetBtn.innerHTML = `
                <span class="spinner-border spinner-border-sm me-2"></span>
                Enviando...
            `;

            const response = await fetch('/api/sessions/request-password-reset', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({ email })
            });

            const result = await response.json();

            if (result.status === 'success') {
                // Mostrar mensaje de éxito con Toastify si está disponible
                if (typeof Toastify !== 'undefined') {
                    Toastify({
                        text: "¡Email enviado! Revisa tu bandeja de entrada",
                        duration: 3000,
                        gravity: "bottom",
                        position: "right",
                        style: { background: "linear-gradient(to right, #00b09b, #96c93d)" }
                    }).showToast();
                }

                // Reemplazar el contenido del formulario con mensaje de éxito
                document.querySelector('.card-body').innerHTML = `
                    <div class="text-center">
                        <div class="mb-4">
                            <i class="bi bi-check-circle text-success" style="font-size: 4rem;"></i>
                        </div>
                        <h4 class="text-success mb-3">¡Email Enviado!</h4>
                        <div class="alert alert-success">
                            <i class="bi bi-envelope-check me-2"></i>
                            ${result.message}
                        </div>
                        <p class="text-muted mb-4">
                            Revisa tu bandeja de entrada y haz clic en el enlace para restablecer tu contraseña.
                        </p>
                        <div class="d-grid gap-2">
                            <a href="/login" class="btn btn-primary">
                                <i class="bi bi-arrow-left"></i> Volver al Login
                            </a>
                            <button onclick="window.location.reload()" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-clockwise"></i> Enviar Otro Email
                            </button>
                        </div>
                    </div>
                `;
            } else {
                throw new Error(result.message);
            }
        } catch (error) {
            console.error('Error:', error);
            resetError.innerHTML = `
                <i class="bi bi-exclamation-triangle me-2"></i>
                ${error.message || 'Error al enviar el enlace. Intenta de nuevo.'}
            `;
            resetError.classList.remove('d-none');
            
            if (typeof Toastify !== 'undefined') {
                Toastify({
                    text: "Error al enviar el email",
                    duration: 3000,
                    gravity: "bottom",
                    position: "right",
                    style: { background: "linear-gradient(to right, #ff5f6d, #ffc371)" }
                }).showToast();
            }
        } finally {
            // Restaurar botón
            resetSpinner.classList.add('d-none');
            resetBtn.disabled = false;
            resetBtn.innerHTML = `
                <i class="bi bi-send"></i> Enviar Enlace de Recuperación
            `;
        }
    });
</script>