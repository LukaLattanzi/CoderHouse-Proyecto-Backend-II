<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Restablecer Contraseña</title>
    <link rel="stylesheet" href="/styles.css">
</head>

<body>
    <div class="auth-container">
        <div class="auth-form">
            <h2>Restablecer Contraseña</h2>

            {{#if success}}
            <div class="alert alert-success">
                Contraseña restablecida exitosamente
            </div>
            <a href="/login" class="btn">Ir al Login</a>
            {{else}}
            {{#if validToken}}
            <p>Ingresa tu nueva contraseña para la cuenta: <strong>{{email}}</strong></p>

            <form id="resetPasswordForm">
                <input type="hidden" id="token" value="{{token}}">

                <div class="form-group">
                    <label for="newPassword">Nueva Contraseña:</label>
                    <input type="password" id="newPassword" name="newPassword" minlength="6" required>
                </div>

                <div class="form-group">
                    <label for="confirmPassword">Confirmar Contraseña:</label>
                    <input type="password" id="confirmPassword" name="confirmPassword" minlength="6" required>
                </div>

                <button type="submit" class="btn">Restablecer Contraseña</button>
            </form>
            {{else}}
            <div class="alert alert-error">
                {{error || 'Token inválido o expirado'}}
            </div>
            <a href="/request-password-reset" class="btn">Solicitar Nuevo Enlace</a>
            {{/if}}
            {{/if}}

            <div class="auth-links">
                <a href="/login">Volver al Login</a>
            </div>
        </div>
    </div>

    <script>
        document.getElementById('resetPasswordForm')?.addEventListener('submit', async (e) => {
            e.preventDefault();

            const token = document.getElementById('token').value;
            const newPassword = document.getElementById('newPassword').value;
            const confirmPassword = document.getElementById('confirmPassword').value;
            const submitBtn = document.querySelector('button[type="submit"]');

            if (newPassword !== confirmPassword) {
                alert('Las contraseñas no coinciden');
                return;
            }

            if (newPassword.length < 6) {
                alert('La contraseña debe tener al menos 6 caracteres');
                return;
            }

            try {
                submitBtn.disabled = true;
                submitBtn.textContent = 'Restableciendo...';

                const response = await fetch('/api/sessions/reset-password', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({ token, newPassword })
                });

                const result = await response.json();

                if (result.status === 'success') {
                    document.querySelector('.auth-form').innerHTML = `
                        <h2>¡Éxito!</h2>
                        <div class="alert alert-success">
                            ${result.message}
                        </div>
                        <a href="/login" class="btn">Ir al Login</a>
                    `;
                } else {
                    throw new Error(result.message);
                }
            } catch (error) {
                console.error('Error:', error);
                alert('Error al restablecer contraseña: ' + error.message);
            } finally {
                submitBtn.disabled = false;
                submitBtn.textContent = 'Restablecer Contraseña';
            }
        });
    </script>
</body>

</html>